.navbar
	margin-bottom 0px
.navbar-default
	background-color #fff
	box-shadow 0 2px 5px rgba(0,0,0,.16)	
	&:hover
		background-color #fff!important
	.navbar-brand
		font-family: 'BenchNine', sans-serif;
		color #000
		font-size 30px
		letter-spacing 2px
		font-weight bold
		text-transform uppercase			
.navbar-default 
	.navbar-nav > li > a
		color #000
		font-family 'BenchNine', sans-serif;
		letter-spacing 1px
		text-transform uppercase
		font-weight bold
		padding 20px 15px
		&.active > a
			background-color #fff
		&:hover
			background-color #f5f5f5
.nav > li > a:hover, .nav > li > a:focus
	background-color transparent
	text-decoration underline

.region-navigation
	float right
	.caja_busqueda
		float left
		margin-right 50px
		.views-exposed-form .views-exposed-widget
			padding 15px 0px 0
		.form-control
			border-radius 0px
		.views-exposed-form .views-exposed-widget .btn
			margin-top 0px
			border-radius 0px
			border 1px solid #000
			background-color #000
	.carrito
		float right
		padding 20px
		cursor pointer
		position relative
		&:hover
			background-color #f5f5f5
		.icomoon
			font-size 25px
		.view-display-id-block
			float right
		.view-empty
			p
				margin 0
			.line-item-summary
				display none
		.view-footer
			.line-item-quantity
				.line-item-quantity-raw
					background: #468847;
					width: 20px;
					display: block;
					color: #fff;
					text-align: center;
					line-height: 20px;
					border-radius: 20px;
					font-size: 12px;
				.line-item-quantity-label
					display none
			.line-item-total
				.line-item-total-label
					display none
				
		